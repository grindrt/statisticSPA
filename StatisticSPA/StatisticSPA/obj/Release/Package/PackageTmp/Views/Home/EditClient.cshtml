<table><tr><td height="10px"></td></tr></table>

<table cellpadding="4" cellspacing="4" width="70%" align="center" style="background-color: skyblue; border:solid 2px red; padding-top:20px;">
  <tr><td colspan="3" style="background-color:gray; font-size:18pt; font-weight:bold; height:30px; text-align:center;">Edit Client Information</td></tr>
  <tr>

    <td style="text-align:right;">Client ID</td>
    <td><input type="text" ng-model="client.id" />  </td>
  </tr>
  <tr>

    <td style="text-align:right;">First Name</td>
    <td><input type="text" ng-model="client.firstName" />  </td>
  </tr>
  <tr>
    <td style="text-align:right;">Last name</td>
    <td><input type="text" ng-model="client.lastname" />  </td>
  </tr>
  <tr>
    <td style="text-align:right;">Email</td>
    <td><input type="text" ng-model="client.email" />  </td>
  </tr>
  <tr>
    <td style="text-align:right;">Birth date</td>
    <td><input type="text" ng-model="client.birthDate" />  </td>
  </tr>
  <tr>
    <td style="text-align:right;">City</td>
    <td><input type="text" ng-model="client.city" />  </td>
  </tr>
  <tr>
    <td style="text-align:right;">Gender</td>
    <td><input type="text" ng-model="client.gender" />  </td>
  </tr>
  <tr>
    <td></td>
    <td>
      <input type="button" value="Save" ng-click="save()"/>
      <br/>
      <div>{{error}}</div>
    </td>
  </tr>

</table>  
